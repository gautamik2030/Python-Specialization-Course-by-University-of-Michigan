largest = None

smallest = None

while True:

	num = input('Enter a number: ')

	if num == 'done' : break

	try :

		num=int(num)

	except:

		print('Invalid input')

		continue

	if num<smallest:

		smallest=num

	elif smallest is None :

		smallest =num

	if num>largest:

		largest=num

	elif largest is None :

		largest=num

print('Maximum is', largest)

print('Minimum is', smallest)
